{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "AMD",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "lib": ["dom", "es2020", "dom.iterable"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}